<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
	<table>
	  <thead>
	    <tr>
	      <th>Date</th>
	      <th>Micropost</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @user.microposts.each do |micropost| %>
	      <tr>
	        <td><%= micropost.created_at %></td>
	        <td><%= micropost.content %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</p>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
